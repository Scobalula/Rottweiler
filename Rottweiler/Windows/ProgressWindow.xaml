<Window x:Class="Rottweiler.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Working...." Height="183" Width="400" WindowStartupLocation="CenterOwner"
        Closing="Window_Closing" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#FF1B1B1B">
        <Label x:Name="label" Content="Exporting Assets..." Margin="10,10,10,0" VerticalAlignment="Top" Height="52" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="22"/>
        <Button x:Name="Cancel" Content="Cancel" Click="Cancel_Click"  Margin="10,0,0,10" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="75" ToolTip="Cancel the current task."/>
        <ProgressBar x:Name="Progress" Height="Auto" Margin="10,67,10,51" Background="#FF1B1B1B" Foreground="White"/>
    </Grid>
</Window>
